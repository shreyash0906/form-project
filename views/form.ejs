<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Responsive Registration</title>
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
     body {
      min-height: 100vh;
      /* Animated background gradient */
      background: linear-gradient(-45deg, #ece9e6, #aee1f9, #d3cce3, #f6d365);
      background-size: 400% 400%;
      animation: gradientMove 15s ease infinite;
    }
    @keyframes gradientMove {
      0% {background-position:0% 50%;}
      50% {background-position:100% 50%;}
      100% {background-position:0% 50%;}
    }

    header {
      background: rgba(255, 255, 255, 0.95);
      color: #888aa0;
      padding: 32px 0 22px 0;
      text-align: center;
      letter-spacing: 2px;
      box-shadow: 0 2px 20px rgba(44,62,80,0.1);
      font-size: 1.6rem;
      border-bottom-left-radius: 16px;
      border-bottom-right-radius: 16px;
    }

    .form-section {
      max-width: 440px;
      margin: 48px auto;
      padding: 36px 32px 28px 32px;
      background: rgba(255,255,255,0.8);
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(52,62,120,0.15), 0 1.5px 7px 1px rgba(140,140,140,0.05);
      backdrop-filter: blur(8px);
      position: relative;
      border: 1.5px solid rgba(80,80,140,0.1);
      transition: box-shadow 0.25s, transform 0.18s;
    }
    .form-section:hover, .form-section:focus-within {
      box-shadow: 0 16px 48px rgba(52,62,120,0.26);
      transform: scale(1.025);
    }

    .form-section form .mb-3 {
      position: relative;
      margin-bottom: 27px;
    }

    /* Floating label effect */
    .form-section .form-label {
      position: absolute;
      top: 18px;
      left: 16px;
      color: #888aa0;
      font-size: 1.05rem;
      background: transparent;
      pointer-events: none;
      transition: 0.18s;
      z-index: 2;
      padding: 0 6px;
      border-radius: 8px;
    }

    /* Show floating label above field on focus or not empty */
    .form-section .form-control:focus + .form-label,
    .form-section .form-control:not(:placeholder-shown) + .form-label {
      top: -13px;
      left: 12px;
      background: #eef5fb;
      color: #1976D2;
      font-size: 0.97rem;
      font-weight: 500;
      padding: 0 7px;
      letter-spacing: 0.02em;
      box-shadow: 0 2px 10px -5px #1976D2;
    }

    /* Adjust input fields */
    .form-section .form-control {
      border-radius: 12px !important;
      border: 1.5px solid #bad9fa;
      background: rgba(255,255,255,0.86);
      font-size: 1.09rem;
      padding: 17px 15px 15px 15px;
      color: #354257;
      box-shadow: 0 2px 8px -2px #c6d6e4;
      outline:none;
      transition: border 0.19s, box-shadow 0.15s;
    }

    .form-section .form-control:focus {
      border-color: #1976D2;
      box-shadow: 0 0 6px #1976D2cc;
    }

    /* Hide native input label float */
    .form-section .form-control::-webkit-input-placeholder { color: transparent; }
    .form-section .form-control:-moz-placeholder { color: transparent; }
    .form-section .form-control::-moz-placeholder { color: transparent; }
    .form-section .form-control:-ms-input-placeholder { color: transparent; }
    .form-section .form-control::placeholder { color: transparent; }

    /* Button styles */
    .btn-submit {
      background: linear-gradient(90deg, #41d97a, #1ca7ec);
      color: #fff;
      border: none;
      font-weight: bold;
      font-size: 1.13rem;
      letter-spacing: 0.03em;
      padding: 14px 0;
      border-radius: 13px;
      transition: background 0.2s, box-shadow 0.21s, transform .10s;
      box-shadow: 0 2px 8px #6fd7b1aa;
      outline: none;
    }

    .btn-submit:hover, .btn-submit:focus {
      background: linear-gradient(90deg,#209f9f 30%,#339d53 100%);
      box-shadow: 0 4px 14px #3bbf9eb4;
      transform: translateY(-2px) scale(1.03);
    }

    footer {
      text-align: center;
      padding: 21px 6vw 12px 6vw;
      background: rgba(241, 248, 251, 0.88);
      letter-spacing: 1.5px;
      color: #555b72;
      margin-top: 40px;
      border-top: 2.5px solid #e0eafc;
      font-size: 1.03rem;
      border-radius: 0 0 14px 14px;
      box-shadow: 0 -1px 8px #a8dced32;
    }

    @media (max-width: 600px) {
      header {
        font-size: 1.13rem;
        padding: 18px 0 12px 0;
        border-radius: 0 0 10px 10px;
      }
      .form-section {
        max-width: 98vw;
        padding: 17vw 6vw 8vw 6vw;
        border-radius: 11px;
      }
      .btn-submit {
        font-size: 1rem;
        padding: 11px 0;
        border-radius: 9px;
      }
      footer {
        font-size: 0.98rem;
        padding: 11px 1vw 7px 1vw;
        border-radius: 0 0 9px 9px;
      }
    }
    #password-status {
      font-size: 0.9rem;
      display: block;
      margin-top: 6px;
    }
  </style>
</head>
<body>
  <header>
    <h1>User Registration</h1>
  </header>

  <!-- SPA-style nav -->
  <nav class="text-center my-4">
    <button class="btn btn-outline-primary" onclick="showPage('form')">Form</button>
    <button class="btn btn-outline-secondary" onclick="showPage('about')">About</button>
  </nav>

  <!-- PAGE 1: FORM SECTION -->
  <div id="form-page">
    <div class="form-section">
      <form action="/submit" method="POST" onsubmit="return validateForm()">
        <div class="mb-3">
          <input type="text" name="name" id="name" class="form-control" placeholder=" " />
          <label class="form-label" for="name">Name</label>
          <small id="greeting" class="text-muted"></small>
        </div>
        <div class="mb-3">
          <input type="email" name="email" id="email" class="form-control" placeholder=" " />
          <label class="form-label" for="email">Email</label>
        </div>
        <div class="mb-3">
          <input type="number" name="age" id="age" class="form-control" placeholder=" " />
          <label class="form-label" for="age">Age</label>
        </div>
        <div class="mb-3">
          <input type="password" name="password" id="password" class="form-control" placeholder=" " oninput="checkPasswordStrength()" />
          <label class="form-label" for="password">Password</label>
          <small id="password-status"></small>
        </div>
        <button type="submit" class="btn btn-submit w-100">Register</button>
      </form>
    </div>
  </div>
<p class="text-center mt-3">
      Already have an account?
      <a href="/login" class="text-decoration-none">Login</a>
    </p>
  </form>
</div>
  <!-- PAGE 2: ABOUT SECTION -->
  <div id="about-page" style="display: none;" class="container text-center">
    <h3 class="mt-4">About This App</h3>
    <p>This responsive registration form is made by Shreyash Moghe. </p>
  </div>

  <footer>
    <p>&copy; 2025 Form. All Rights Reserved.</p>
  </footer>

  <!-- Scripts -->
  <script>
    // Enhanced form validation
    function validateForm() {
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const age = parseInt(document.getElementById('age').value);
      const password = document.getElementById('password').value;

      if (!name || !email || isNaN(age) || !password) {
        alert("All fields are required!");
        return false;
      }

      if (age < 18) {
        alert("You must be at least 18 years old.");
        return false;
      }

      const strongPassword = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;
      if (!strongPassword.test(password)) {
        alert("Password must be at least 8 characters and include uppercase, lowercase, number, and special character.");
        return false;
      }

      return true;
    }

    // Dynamic password strength feedback
    function checkPasswordStrength() {
      const password = document.getElementById('password').value;
      const status = document.getElementById('password-status');

      if (password.length === 0) {
        status.innerText = '';
        status.className = '';
        return;
      }

      if (password.length < 6) {
        status.innerText = 'Too weak';
        status.className = 'text-danger';
      } else if (password.length < 8) {
        status.innerText = 'Weak';
        status.className = 'text-warning';
      } else if (/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/.test(password)) {
        status.innerText = 'Strong password';
        status.className = 'text-success';
      } else {
        status.innerText = 'Medium strength';
        status.className = 'text-info';
      }
    }

    // Dynamic greeting
    document.getElementById('name').addEventListener('input', function () {
      const name = this.value.trim();
      const greeting = document.getElementById('greeting');
      greeting.innerText = name ? `Hello, ${name}! ðŸ‘‹` : '';
    });

    // Client-side routing
    function showPage(page) {
      document.getElementById('form-page').style.display = (page === 'form') ? 'block' : 'none';
      document.getElementById('about-page').style.display = (page === 'about') ? 'block' : 'none';
    }
  </script>
</body>
</html>
